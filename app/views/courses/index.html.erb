<div class="row">
	<div class="col s12">
		<h3 class="center-align">Course Listing</h3>
	</div>
</div>
<div class="row">
	<% @courses.each do |course|%>
	    <div class="col s6 m6">
	      <div class="card blue-grey darken-1">
	        <div class="card-content white-text">
	          <span class="card-title"><%= course.course_code%>: <%= course.course_name%></span>
	          <p><%= truncate(course.course_description, length: 100) %></p>
	        </div>
	        <div class="card-action">
	        <% if logged_in? && !(current_user.courses.include?(course)) %>
	          <%= link_to 'ENROLL', course_enroll_path(course_id: course.id), method: :post %>
	          <a href="#">INFO</a>
	        <% else %>  
	          <a href="#">INFO</a>
	        <% end %>  
	        </div>
	      </div>
	    </div>
	<% end%>    
</div>
