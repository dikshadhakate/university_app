<header>
	<ul id="dropdown1" class="dropdown-content">
		<% if logged_in? %>
		  <li><%= link_to 'Profile', student_path(current_user) %></li>
		  <li><%= link_to 'Edit Profile', edit_student_path(current_user) %></li>
		<% else %>
		  <li><%= link_to 'Sign Up', new_student_path %></li>
		<% end %>  
	    <li class="divider"></li>
		<li><%= session_link %></li>
	</ul>
	<ul id="dropdown2" class="dropdown-content">
		<% if logged_in? %>
		  <li><%= link_to 'Profile', student_path(current_user) %></li>
		  <li><%= link_to 'Change Password', edit_student_path(current_user) %></li>
		<% else %>
		  <li><%= link_to 'Sign Up', new_student_path %></li>
		<% end %>  
	    <li class="divider"></li>
		<li><%= session_link %></li>
	</ul>
	<nav>
		<div class="container">
	    <div class="nav-wrapper">
	      <%= link_to 'Tech University', root_path, class: "brand-logo"%>
	      <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
	      <div class="container">
	      <ul id="nav-mobile" class="right hide-on-med-and-down">
	        <li><%= link_to 'Courses', root_path %></li>
	        <% if logged_in? %>
	        	<li><%= link_to 'Students', students_path %></li>
	        <% end %>	
	        <li><a class="dropdown-trigger" href="#!" data-target="dropdown1">Account<i class="material-icons right">arrow_drop_down</i></a></li>

	      </ul>
				<ul class="sidenav" id="mobile-demo">
				  <li><%= link_to 'Courses', root_path %></li>
	        <% if logged_in? %>
	        	<li><%= link_to 'Students', students_path %></li>
	        <% end %>
				  <li><a class="dropdown-trigger" href="#!" data-target="dropdown2">Account<i class="material-icons right">arrow_drop_down</i></a></li>
				</ul>
	    </div>
	  </div>    
	</nav>
	<% flash.each do |msg_key, msg_value| %>
		<div class="container">
			<div class="row center sign-up-form">
			  <div class="col s12 m12 l12">
					<div class="card-panel teal lighten-2" id="fade-out-target">
						<span class="white-text">
							<%= msg_value %>
						</span>
					</div>
				</div>
			</div>
		</div>	
	<% end %>			
</header>