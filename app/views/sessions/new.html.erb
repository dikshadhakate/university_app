<div class="container">
	<div class="row center sign-up-form">
		<div class="col s12 m12 l12">
			<div class="card-panel">
				<h4 class="center-align">Log In</h4>		
				<div class="row">
					<%= form_for(:session, html: {class: 'col s12'}) do |f| %>
						<div class="row">	
						    <div class="input-field col s12">
								<%= f.label :email, class: "active" %>
								<%= f.email_field :email, placeholder: "Enter your email", autofocus: true %>
							</div>	
						</div>
						<div class="row">	
						    <div class="input-field col s12">
								<%= f.label :password, class: "active" %>
								<%= f.password_field :password, placeholder: "Enter password", autofocus: true %>
							</div>	
						</div>
						<div class="row">	
						    <div class="input-field col s12">
								<%= f.button 'Sign In', class: "waves-effect waves-light btn-large"%>
							</div>
						</div>		
					<% end %>	
				</div>
			</div>			
		</div>
	</div>
</div>
