<div class="row">
	<div class="col s12">
		<h3 class="center-align">Student Profile</h3>
	</div>
</div>
<div class="row">
    <div class="col s12 m12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">Name: <%= @student.student_name%></span>
          <p>Email: <%= @student.email %></p>&nbsp;
          <div class="divider"></div>&nbsp;
          <p>Course Enrollment: &nbsp;
            <%if @student.courses.empty? %>
              None
            <% else %>
                <% @student.courses.each do |course| %>
                  <li><%= course.course_code %>: &nbsp; <%= course.course_description %></li>
                <% end %>
            <% end %>  
          </p>
        </div>
        <div class="card-action">
          <% if current_user == @student %>
            <%= link_to '<i class="material-icons right">create</i>EDIT PROFILE'.html_safe, edit_student_path %>
          <% end %>  
        </div>
      </div>
    </div>
</div>
